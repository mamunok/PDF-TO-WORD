    <button onclick="convertPDF()">Convert to Word</button>
    <div id="result"></div>
  </div>

  <script>
    async function convertPDF() {
      let fileInput = document.getElementById("pdfFile").files[0];
      if (!fileInput) {
        alert("‚ö†Ô∏è Please select a PDF file first!");
        return;
      }

      document.getElementById("result").innerHTML = "‚è≥ Processing...";

      let formData = new FormData();
      formData.append("File", fileInput);

      try {
        let response = await fetch("https://v2.convertapi.com/convert/pdf/to/docx?Secret=U9t7MOReGbDIlqC8hyGjV4QVWjqCQqnE", {
          method: "POST",
          body: formData
        });

        let data = await response.json();

        if (data.Files && data.Files.length > 0) {
          let link = document.createElement("a");
          link.href = data.Files[0].Url;
          link.download = "converted.docx";
          link.innerText = "‚¨áÔ∏è Download Word File";
          document.getElementById("result").innerHTML = "";
          document.getElementById("result").appendChild(link);
        } else {
          document.getElementById("result").innerHTML = "‚ùå Conversion failed!";
        }
      } catch (error) {
        document.getElementById("result").innerHTML = "‚ö†Ô∏è Error: " + error.message;
      }
    }
  </script>
